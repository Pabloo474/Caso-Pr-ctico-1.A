pipeline{
    agent none
    
    stages{
        stage('Wnidows'){
            agent {label 'windows'}
            steps{
                echo 'el hostname no va porque se queda en el bat indefinidamente'
            }
        }
        stage('LinuxA'){
            agent {label 'ubuntu'}
            steps{
                echo 'Hola Mundo'
                sh '''
                    hostname
                    uname -a
                    whoami
                '''
            }
        }
         stage('LinuxB'){
             agent {label 'ubuntu'}
            steps{
                echo 'Hola Mundo'
                sh '''
                    hostname
                    uname -a
                    whoami
                '''
            }
        }
    }
}